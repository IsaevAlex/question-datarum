
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="media" >
  			<div class="media-body">
    			<p><h5 class="media-heading"><%= question.title %> - <%= question.user.name %> </h5></p> 
   				<p><%= question.text %></p> 
   				 <a  data-toggle="collapse" href="#collapseExample<%= question.id + 1 %>" aria-expanded="false" aria-controls="collapseExample", title='Написать отзыв', data-toggle ='tooltip', data-placement = 'top'  >
                  		Дать ответ
                  </a><br> <br>
                 <div id="answer<%= question.id %>">

                 	 <%= render :partial => 'answers/answer', :collection => question.answers %>
        		 </div>
   				 <div class="collapse" id="collapseExample<%= question.id + 1 %>">
                      <div class="card card-block">
                        
                         <%= form_for([question, Answer.new(question_id: question.id)], remote: true) do |f| %>
								<ul class="errors" style="list-style: none;"></ul>
								
								<div class="form-group">
									<%= f.text_area :text, autofocus: true, cols: "40", rows: "2", class:"form-control" %>
								</div>
								<%= f.text_field :question_id, value: question.id, type: "hidden"  %>



								<%= f.submit "Дать ответ",  class: "btn btn-primary pull-left" %>
						<% end %>	
                        
                      </div>
              	  </div><br>	
   				 
      				
   				
   				
  			</div>
		</div>		
	</div>
</div><br>
