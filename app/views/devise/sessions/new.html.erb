<div class="row">
  <div class="col-xs-3 col-xs-offset-2 col-md-6 col-md-offset-5">
      <h2>Вход</h2>
      <br>    
  </div> 
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-10 col-md-offset-1 content">
              <div class="col-md-8 col-md-offset-2">
              
              <div class="form-group">
                  <%= f.email_field :email, :placeholder => "Эл.адрес", autofocus: true, class:"form-control" %>
              </div>

              <div class="form-group">
                  <%= f.password_field :password, :placeholder => 'Пароль', class:"form-control form-control-tag" %>
              </div>

              <div class="col-md-offset-4">
                  <%= f.submit "Войти в личный кабинет", class: "btn btn-primary " %>
              </div>
    <% end %>

    <%= link_to "Назад", root_path %>

    </div>
  </div>
</div>
